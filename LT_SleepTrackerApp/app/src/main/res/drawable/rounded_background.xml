<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer bóng đổ -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <corners android:radius="16dp"/>
            <solid android:color="#20000000"/> <!-- Màu xám trong suốt cho bóng -->
        </shape>
    </item>

    <!-- Layer chính với gradient -->
    <item>
        <shape>
            <corners android:radius="16dp"/>
            <gradient
                android:startColor="#E3F2FD"
                android:endColor="#BBDEFB"
                android:angle="45"/>
            <stroke
                android:width="1dp"
                android:color="#E0E0E0"/>
        </shape>
    </item>
</layer-list>