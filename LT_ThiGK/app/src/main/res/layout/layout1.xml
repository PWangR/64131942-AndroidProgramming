<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/soft_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn Màn Hình"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Nút bấm 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <Button
                android:id="@+id/button_screen_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màn Hình 1"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="12dp"
                android:stateListAnimator="@drawable/button_scale" />
        </androidx.cardview.widget.CardView>

        <!-- Nút bấm 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <Button
                android:id="@+id/button_screen_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màn Hình 2"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="12dp"
                android:stateListAnimator="@drawable/button_scale" />
        </androidx.cardview.widget.CardView>

        <!-- Nút bấm 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <Button
                android:id="@+id/button_screen_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màn Hình 3"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="12dp"
                android:stateListAnimator="@drawable/button_scale" />
        </androidx.cardview.widget.CardView>

        <!-- Nút bấm 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <Button
                android:id="@+id/button_screen_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Màn Hình 4"
                android:textColor="@color/black"
                android:background="?attr/selectableItemBackground"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="12dp"
                android:stateListAnimator="@drawable/button_scale" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
