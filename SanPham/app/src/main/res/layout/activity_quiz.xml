<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#2A3840">

    <!-- Thanh tiến trình ở trên -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#00BCD4"
        android:backgroundTint="#00B0FF"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp"/>

    <!-- Câu hỏi -->
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Câu hỏi sẽ hiển thị ở đây"
        android:textSize="22sp"
        android:textColor="#00E5FF"
        android:textStyle="bold"
        android:layout_below="@id/progressBar"
        android:layout_marginBottom="32dp"/>

    <!-- Các nút trả lời -->
    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/txtQuestion"
        android:weightSum="4"
        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle">

        <Button
            android:id="@+id/btnA"
            style="@style/QuizOptionButton"
            android:text="Đáp án A"/>

        <Button
            android:id="@+id/btnB"
            style="@style/QuizOptionButton"
            android:text="Đáp án B"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnC"
            style="@style/QuizOptionButton"
            android:text="Đáp án C"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnD"
            style="@style/QuizOptionButton"
            android:text="Đáp án D"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</RelativeLayout>
