<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background_light">

    <!-- Logo / Avatar kênh YouTube -->
    <ImageView
        android:id="@+id/imgChannelAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_youtube_logo"
        android:contentDescription="Logo kênh YouTube"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tên kênh -->
    <TextView
        android:id="@+id/txtChannelName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên kênh YouTube"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgChannelAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mô tả ngắn -->
    <TextView
        android:id="@+id/txtChannelDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kênh chia sẻ các bài học lập trình và quiz bổ ích."
        android:textSize="16sp"
        android:textColor="#555555"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtChannelName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút mở kênh YouTube -->
    <Button
        android:id="@+id/btnOpenYouTube"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mở kênh YouTube"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtChannelDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
